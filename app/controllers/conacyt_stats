class ConacytStatsController < ApplicationController
  skip_before_filter :verify_authenticity_token
  protect_from_forgery with: :null_session
  before_filter :authenticate

  def authenticate
    authenticate_or_request_with_http_basic do |user, password|
      user == "ecm" && password == "EcM05_06"
    end
  end

  def padron
    usuarios = User.select('email, name, phone, paternal_surname, maternal_surname').all()

    depositarios = {}

    usuarios.each |u| do
        depositarios.push(
          {
            correo: u.email,
            nombre: u.name,
            numTel: u.phone,
            pApellido: u.paternal_surname,
            sApellido: u.maternal_surname

          }
        )
    end

  render :json => usuarios

  end

end
