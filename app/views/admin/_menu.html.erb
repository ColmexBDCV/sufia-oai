<li class="dropdown">
  <%= link_to sufia.admin_stats_path, role: 'button', data: { toggle: 'dropdown' }, aria: { haspopup: true, expanded: false } do %>
    <span class="fa fa-gear"></span> <%= t("sufia.toolbar.admin.menu") %> <span class="caret"></span>
  <% end %>
  <ul class="dropdown-menu">
    <li>
      <%= link_to main_app.units_path do %>
        <%= content_tag(:i, "", class: "fa fa-university") %>
        <%= "Units" %>
      <% end %>
    </li>
    <%- if can? :manage, :all %>
      <li>
        <%= link_to sufia.profiles_path do %>
          <%= content_tag(:i, "", class: "fa fa-users") %>
          <%= "Users" %>
        <% end %>
      </li>
      <li>
        <%= link_to sufia.admin_stats_path do %>
          <%= content_tag(:i, "", class: "fa fa-bar-chart") %>
          <%= t("sufia.toolbar.admin.statistics") %>
        <% end %>
      </li>
      <li>
        <%= link_to main_app.sidekiq_web_path do %>
          <%= content_tag(:i, "", class: "fa fa-industry") %>
          <%= "Jobs" %>
        <% end %>
      </li>
    <%- end %>
  </ul>
</li>
