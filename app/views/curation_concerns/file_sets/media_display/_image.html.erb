<% if CurationConcerns.config.display_media_download_link %>
    <figure data-turbolinks-permanent>
        <%= openseadragon_picture_tag(loris_url_for(file_set.id), {"data-turbolinks-permanent" => "true"})  %>
        <% if can?(:update, permissions_object_for(file_set)) %>
          <%= link_to main_app.download_path(file_set), target: "_new" do %>
            <figcaption>Download the full-sized image</figcaption>
          <% end %>
        <% end %>
    </figure>
<% else %>
    <figure>
        <%= openseadragon_picture_tag(loris_url_for(file_set.id), {"data-turbolinks-permanent" => "true"}) %>
    </figure>
<% end %>
