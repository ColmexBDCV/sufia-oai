<div class="nested-fields">
  <table class="table table-striped">
    <tr>
      <td>
      <%= f.input :user_id, collection: User.all, label_method: 'to_s', include_blank: "Please select a user", input_html: { class: 'form-control select2-field' } %>
      </td>
      <td>
      <%= f.input :level, collection: Membership.levels.map{|l| [l.titleize, l]}, include_blank: "Please select a level" %>
      </td>
      <td style="vertical-align: middle;">
      <%= link_to_remove_association f , class: "btn btn-danger" do %>
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
      <% end %>
      </td>
    </tr>
  </table>
</div>
