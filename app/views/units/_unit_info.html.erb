<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= unit.name %></h3>
  </div>
  <div class="panel-body">
    <div class="col-sm-3">
      <%= image_tag unit.image.url(:thumb) %>
    </div>
    <div class="col-sm-9">
      <%= unit.description %>
      <hr>
      Contact Info: <%= unit.contact_info %>
    </div>
  </div>
</div>
