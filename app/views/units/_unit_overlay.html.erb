<div class="col-lg-5 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 collection-image">
  <div class="media hidden-sm hidden-xs">
    <div class="media-left">
      <%= image_tag unit.image.url(:landing), class: "img-thumbnail media-object" %>
    </div>
    <div class="media-body">
      <h3 class="media-heading"><%= link_to unit.name, unit, class: "coll-title-link" %></h3>
      <p><%= unit.description %></p>
    </div>
  </div>
  <div class="hidden-lg hidden-md">
    <h3 class="coll-title"><%= link_to unit.name, unit, class: "coll-title-link" %></h3>
    <%= image_tag unit.image.url(:landing), class: "img-thumbnail img-responsive" %>
    <p class="small_paragraph xs_paragraph"><%= unit.description %></p>
    <p><button type="button" class="btn btn-success">Browse Collection</button></p>
  </div>
</div>