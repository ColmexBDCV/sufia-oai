<% provide :page_title, "Create Unit" %>

<h1 class="page-header">Create new unit</h1>

<%= simple_form_for @unit do |f| %>
  <%= f.input :name, label: "Unit name" %>
  <%= f.input :key, label: "Unit key", help: "Short identifier ofr this unit. Only A-Z, a-z, and 0-9 are allowed" %>
  <%= f.input :description %>
  <%= f.input :contact_info %>
  <%= f.submit "Create" %>
  <%= link_to "Cancel", units_path, :class => 'btn btn-link' %>
<% end %>
