<h1 class="page-header"><%= @unit.name %></h1>

<div class="row">
  <div class="col-md-6">
    <dl class="dl-horizontal">
      <dt>Key</dt>
      <dd><%= @unit.key %></dd>

      <dt>Description</dt>
      <dd><%= @unit.description %></dd>

      <dt>Key</dt>
      <dd><%= @unit.contact_info %></dd>
    </dl>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading"><strong>Members</strong></div>
      <div class="panel-body">
        <ul class="list-unstyled">
          <% if @unit.members.each do |user| %>
            <li><%= mail_to user.email, user.name %></li>
          <% end.empty? %>
            <li>This unit has no members.</li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
